mixin specTable(key)
	table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
		thead
			tr
				th
				th iOS
				th Android
		tbody
			tr
				td pc
				td= spec[key].pc.iOS
				td= spec[key].pc.Android
			tr
				td sp
				td= spec[key].sp.iOS
				td= spec[key].sp.Android

- var isComponent = true

block metaVars

doctype html

html(lang="ja")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="description", content="Sample illustrating the use of Push Messaging and Notifications.")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title Push Messaging & Notifications
		// Add to homescreen for Chrome on Android
		meta(name="mobile-web-app-capable", content="yes")
		link(rel="icon", sizes="192x192", href="../images/touch/chrome-touch-icon-192x192.png")
		// Add to homescreen for Safari on iOS
		meta(name="apple-mobile-web-app-title", content="Push Messaging and Notifications Sample")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
		link(rel="apple-touch-icon-precomposed", href="../images/apple-touch-icon-precomposed.png")
		// Tile icon for Win8 (144x144 + tile color)
		meta(name="msapplication-TileImage", content="images/touch/ms-touch-icon-144x144-precomposed.png")
		meta(name="msapplication-TileColor", content="#3372DF")
		link(rel="icon", href="../images/favicon.ico")
		// Include manifest file in the page
		link(rel="manifest", href="/manifest.json")
		link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
		link(rel="stylesheet", href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css")
		link(rel="stylesheet", href="/style.css")
		script(defer="", src="https://code.getmdl.io/1.3.0/material.min.js")
		block headScript
	body
		.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
			header.mdl-layout__header
				.mdl-layout__header-row
					span.mdl-layout-title
						block title
					.mdl-layout-spacer
			.mdl-layout__drawer
				span.mdl-layout-title PWA
				nav.mdl-navigation
					a.mdl-navigation__link(href="/push") プッシュ通知
					a.mdl-navigation__link(href="/location") 位置情報
					a.mdl-navigation__link(href="/camera") カメラ &amp; マイク
					a.mdl-navigation__link(href="/vibe") バイブ
					a.mdl-navigation__link(href="/file") ファイル
					hr
					a.mdl-navigation__link(href="/spec") スペック表
			main.mdl-layout__content
				if isComponent
					block content
					.mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
						.mdl-tabs__tab-bar
							a.mdl-tabs__tab.is-active(href='#Demo') Demo
							a.mdl-tabs__tab(href='#Code') Code
							a.mdl-tabs__tab(href='#Spec') Spec
						#Demo.mdl-tabs__panel.is-active.panel-body
							block demo
						#Code.mdl-tabs__panel.panel-body
							block code
						#Spec.mdl-tabs__panel.panel-body
							block spec

		block scripts
